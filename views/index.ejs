<div class='row' ng-show='otpsent'> 
  <div class='col-lg-12 col-md-12 col-sm-12'>

<div class='alert alert-success'>
Email has been sent for verification
   </div>

<div class='alert alert-success'>
OTP has been sent to your number-{{phoneNumber}}
   </div>
<div style="color:red">
{{otpWarning}}
</div>

<form >
   <div class="form-group">
    <label for="currentPhoneNumber">Current phoneNumber</label>
    <input type="tel" pattern ='[0-9]{10}' class="form-control" id="currentPhoneNumber" ng-model='phoneNumber' required >
  </div>
  
  <div class="form-group">
    <label for="otp">Enter the otp</label>
    <input type="text" class="form-control" id="otp" ng-model='userOtp'>
  </div>

  <button ng-click=verifyOtp() class="btn btn-default">Verify otp</button>
  <button ng-click=resendOtp() class='btn btn-info'>Resend Otp</button>
</form>


