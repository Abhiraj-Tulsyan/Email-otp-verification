<div ng-show='totalVerified==false'>
<div class='row'>
  <div class='col-lg-8 col-md-8 col-sm-8' style='margin-left:10%; margin-right:10%'>  
   <form ng-show='signinshow'>
     <p style='color:red'> {{message}} </p>
  <div class="form-group">
    <label for="email">Email address:</label>
    <input type="email" class="form-control" id="email" ng-model='email'>
  </div>
  <div>
<center> <h5>OR</h5></center>
  </div>
  <div class="form-group">
    <label for="phoneNumber">PhoneNumber</label>
    <input type="tel" pattern='[0-9]{10}' class="form-control" id="phoneNumber" ng-model='phoneNumber'>
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    <input type="password" class="form-control" id="password" ng-model='password' required minlength="8">
  </div>
  <button ng-click='checking()' class="btn btn-default">Submit</button>
</form>
</div>
</div>




<div class='container'>
<div class='row'> 
  <div class='col-lg-6 col-md-6 col-sm-6'>
 <div class='alert alert-success' ng-show='emailSentMessage.length>0'> 
   {{emailSentMessage}}</div>
</div>
 <div class='alert alert-danger' ng-show='emailErrorMessage.length>0'> 
   {{emailErrorMessage}}</div>
</div>


<div class='alert alert-danger' ng-show='showVerifyEmail'>
Your Email has not been verified. 
<button ng-click='emailVerifyAgain()'>Verify</button>
   </div>
<div ng-show='showVerifyPhone'>
  <div class='alert alert-danger'>
Your Phone has not been verified.
<button ng-click='phoneVerifyAgain()'>Verify</button>
  </div>
 </div>
  <div ng-show='otpsent'>
<div class='alert alert-success' >
OTP has been sent to your number-{{phoneNumber}}
   </div>
<div style="color:red">
{{otpWarning}}
</div>

<form >
   <div class="form-group">
    <label for="currentPhoneNumber">Current phoneNumber</label>
    <input type="tel" pattern ='[0-9]{10}' class="form-control" id="currentPhoneNumber" ng-model='phoneNumber' required >
  </div>
  
  <div class="form-group">
    <label for="otp">Enter the otp</label>
    <input type="text" class="form-control" id="otp" ng-model='userOtp'>
  </div>

  <button ng-click=verifyOtp() class="btn btn-default">Verify otp</button>
  <button ng-click=resendOtp() class='btn btn-info'>Resend Otp</button>
</form>

</div>
  




</div>
</div>




<div ng-if='totalVerified'>
<div class='container'>
<div class="jumbotron">
  <h1>Hello {{username}}</h1>
 
  <p>Your email has been verified</p>
  <p>Your phone number has been verified</p>
</div>
</div>


</div>



</div>




</body>
</html>